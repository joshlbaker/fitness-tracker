<h1>Showing <%= pluralize(@recipes&.count, "Recipe") %></h1>

<div class="recipes">
  <% @recipes.each do |recipe| %>
    <h3><%= link_to recipe.name, recipe_path(recipe) %></h3>
    <p><%= recipe.description %></p>
    <ul class="recipe-actions">
      <li><%= link_to "Edit", edit_recipe_path(recipe) %></li>
      <li><%= link_to  "Delete", recipe_path(recipe), data: { confirm: "Are you sure you want to delete #{recipe.name}?" }, method: :delete %></li>
    </ul>
  <% end %>
</div>
